#!groovy
// Run docker build
properties([disableConcurrentBuilds()])

pipeline {
    agent { 
        label 'master'
        }
    triggers { pollSCM('* * * * *') }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
        
        stage("ssh copy id") {
            steps {
                echo " ============== ssh copy id =================="
                withCredentials([usernamePassword(credentialsId: 'strofimo-user', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh """
                    cat ~/.ssh/id_rsa.pub |sshpass -p $PASSWORD ssh root@nginx 'cat >> ~/.ssh/authorized_keys'
                    """
                }
            }
        }
        stage("copy config") {
            steps {
                echo " ============== start building image =================="
                dir ('conf') {
                	sh 'cp nginx.conf /etc/nginx'
                }
            }
        }
        stage("docker push") {
            steps {
                echo " ============== start pushing image =================="
                sh '''
                
                '''
            }
        }
    }
}
